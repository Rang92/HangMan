<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INFO"
        android:id="@+id/infoHome"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="infoClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High score"
        android:id="@+id/highscoreHome"
        android:layout_below="@+id/settingsHome"
        android:layout_alignStart="@+id/settingsHome"
        android:onClick="highscoreClicked" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/settingsHome"
        android:layout_below="@+id/infoHome"
        android:layout_alignEnd="@+id/infoHome"
        android:onClick="settingsClicked" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:id="@+id/restartHome"
        android:layout_below="@+id/highscoreHome"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/highscoreHome"
        android:onClick="restartClicked" />

    <ImageView
        android:id="@+id/imageA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3sp"
        android:scaleType="fitCenter"
        android:src="@drawable/a" android:layout_weight="1"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3sp"
        android:scaleType="fitCenter"
        android:src="@drawable/b" android:layout_weight="1"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3sp"
        android:scaleType="fitCenter"
        android:src="@drawable/c" android:layout_weight="1"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3sp"
        android:scaleType="fitCenter"
        android:src="@drawable/d" android:layout_weight="1"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3sp"
        android:scaleType="fitCenter"
        android:src="@drawable/e" android:layout_weight="1"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3sp"
        android:scaleType="fitCenter"
        android:src="@drawable/f" android:layout_weight="1"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3sp"
        android:scaleType="fitCenter"
        android:src="@drawable/g" android:layout_weight="1"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3sp"
        android:scaleType="fitCenter"
        android:src="@drawable/h" android:layout_weight="1"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3sp"
        android:scaleType="fitCenter"
        android:src="@drawable/i" android:layout_weight="1"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3sp"
        android:scaleType="fitCenter"
        android:src="@drawable/j" android:layout_weight="1"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3sp"
        android:scaleType="fitCenter"
        android:src="@drawable/k" android:layout_weight="1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" number"
        android:id="@+id/turnsLeft"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputLetter"
        android:layout_below="@+id/wrongLetters"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/sendLetter"
        android:layout_below="@+id/restartHome"
        android:layout_toEndOf="@+id/imageA"
        android:layout_alignStart="@+id/infoHome"
        android:onClick="submitClicked" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/viewLetter"
        android:layout_alignTop="@+id/inputLetter"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/wrongLetters"
        android:textColor="#000000"
        android:layout_below="@+id/turnsLeft"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Turns left: "
        android:id="@+id/textView"
        android:layout_alignTop="@+id/turnsLeft"
        android:layout_alignParentStart="true"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wrong letters: "
        android:id="@+id/textView4"
        android:layout_above="@+id/inputLetter"
        android:layout_alignParentStart="true"
        android:textColor="#000000"/>

</RelativeLayout>
